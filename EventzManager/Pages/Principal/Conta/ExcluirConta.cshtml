@page
@model EventzManager.Pages.Principal.Conta.ExcluirContaModel
@{
    Layout = "/Pages/Shared/_LayoutPrincipal.cshtml";
    ViewData["Title"] = "Excluir";
}

<div class="row mb-3">
    <div class="col-6">
        <a class="btn btn-lg btn-secondary" asp-area="" asp-page="/Principal/ListaEventos" asp-route-id="@TempData["id_usuario"]">&lt; Voltar</a>
    </div>
</div>

@if (TempData["erro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["erro"]
    </div>
}

<div class="acoes-form card m-auto">
    <div class="card-body">
        <form method="post" asp-page-handler="Excluir">
            <div class="text-center mb-4">
                <p class="card-title fs-4 fw-bold mb-2">Excluir conta</p>
                <p class="card-subtitle">Insira a senha para completar a exclusão</p>
            </div>

            <div class="mb-4">
                <input class="form-control" type="password" placeholder="Senha" asp-for="@Model.SenhaView" />
                <span class="text-danger" asp-validation-for="@Model.SenhaView"></span>
            </div>

            <button class="btn btn-primary w-100" type="submit" onclick="return confirm('Tem certeza que deseja excluir a sua conta? Esta ação não poderá ser desfeita.')">Salvar</button>
        </form>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}