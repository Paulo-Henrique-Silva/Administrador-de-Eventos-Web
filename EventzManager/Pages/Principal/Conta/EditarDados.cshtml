@page
@model EventzManager.Pages.Principal.Conta.EditarDadosModel
@{
    Layout = "/Pages/Shared/_LayoutPrincipal.cshtml";
    ViewData["Title"] = "Conta";
}

<div class="row mb-3">
    <div class="col-6">
        <a class="btn btn-secondary" asp-area="" asp-page="/Principal/ListaEventos" asp-route-id="@TempData["id_usuario"]">&ang; Voltar</a>
    </div>

    <div class="dropend col-6 text-end">
        <button class="btn btn-secondary" type="button" data-bs-toggle="dropdown" aria-expanded="false">
            <img class="me-2" src="/imagens/mais_acoes.svg" alt="MAIS ACOES" aria-label="MAIS ACOES" /> Mais ações
        </button>
        <ul class="dropdown-menu">
            <li>
                <a class="dropdown-item" onclick="return confirm('Tem certeza que deseja sair da sua conta?')" asp-area="" asp-page="/Login/Entrar">
                    <img class="me-2 img-fluid center-block" src="/imagens/sair.svg" alt="SAIR" aria-label="SAIR" /> Sair
                </a>
            </li>
            <li>
                <a class="dropdown-item" asp-area="" asp-page="/Principal/Conta/ExcluirConta" asp-route-id="@TempData["id_usuario"]">
                    <img class="me-2 img-fluid center-block" src="/imagens/excluir.svg" alt="EXCLUIR" aria-label="EXCLUIR" /> Excluir conta
                </a>
            </li>
        </ul>
    </div>
</div>

@if (TempData["erro"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["erro"]
    </div>
}

<div class="acoes-form card m-auto">
    <div class="card-body">
        <form method="post" asp-page-handler="Editar">
            <div class="text-center">
                <p class="card-title fw-bold">Informações da conta</p>
            </div>

            <div class="mb-3">
                <input class="form-control" type="text" placeholder="Nome" style="text-transform: uppercase;" asp-for="@Model.NomeView"/>
                <span class="text-danger" asp-validation-for="@Model.NomeView"></span>
            </div>

            <div class="mb-3">
                <input class="form-control" type="email" placeholder="Email" asp-for="@Model.EmailView" />
                <span class="text-danger" asp-validation-for="@Model.EmailView"></span>
            </div>

            <div class="input-group mb-3">
                <input class="form-control" type="password" readonly placeholder="Senha" />
                <a class="input-group-text link-primary" asp-area="" asp-page="/Principal/Conta/AlterarSenha" asp-route-id="@TempData["id_usuario"]">Alterar</a>
            </div>

            <button class="btn btn-primary w-100" type="submit">Salvar</button>
        </form>
    </div>
</div>

@section Scripts{
        <partial name="_ValidationScriptsPartial" />
}